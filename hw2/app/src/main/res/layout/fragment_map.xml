<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.map.MapFragment"
    app:backgroundTint="?attr/bgColor">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="28dp">

        <com.mancj.materialsearchbar.MaterialSearchBar
            android:id="@+id/searchBar"
            style="@style/MyCustomTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mt_maxSuggestionsCount="10"
            app:mt_placeholder="@string/search_bar_placeholder"
            app:mt_speechMode="true" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/get_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:backgroundTint="?attr/bgColor"
            app:tint="?attr/iconColor"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_location"
            android:translationX="-20dp"
            android:translationY="-80dp"
            app:borderWidth="0px"
            app:fabSize="auto" />

        <RelativeLayout
            android:id="@+id/save_modal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:translationY="-80dp"
            android:background="?attr/bgColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/save_location"
                    android:textColor="?attr/textPrimaryColor" />
                <TextView
                    android:id="@+id/location_geocode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/search_location"
                    android:textSize="12sp"
                    android:textColor="?attr/textSecondaryColor" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/location_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/search_location"
                        android:textColor="?attr/textPrimaryColor" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/save_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:text="@string/save"
                    tools:ignore="RtlHardcoded"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/cancel_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="-50dp"
                    android:text="@string/cancel"
                    tools:ignore="RtlHardcoded"
                    android:backgroundTint="?attr/redColor"
                    android:textColor="@color/white" />

            </LinearLayout>
        </RelativeLayout>
    </com.mapbox.mapboxsdk.maps.MapView>
</androidx.constraintlayout.widget.ConstraintLayout>