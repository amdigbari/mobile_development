<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/map_fragment">

    <fragment
        android:id="@+id/bookmarks_fragment"
        android:name="com.example.hw2.ui.bookmarks.BookmarksFragment"
        android:label="@string/title_bookmarks"
        tools:layout="@layout/fragment_bookmarks" >

        <action
            android:id="@+id/action_bookmarkFragment_to_mapFragment"
            app:destination="@id/map_fragment"/>
    </fragment>

    <fragment
        android:id="@+id/map_fragment"
        android:name="com.example.hw2.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map" >

        <argument
            android:name="place"
            app:argType="com.example.hw2.model.Place"
            app:nullable="false" />

        <argument
            android:name="isFromBookmark"
            app:argType="boolean"
            android:defaultValue="false"/>
    </fragment>

    <fragment
        android:id="@+id/settings_fragment"
        android:name="com.example.hw2.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>