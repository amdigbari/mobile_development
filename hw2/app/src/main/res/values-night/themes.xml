<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hw2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="textPrimaryColor">@color/white</item>
        <item name="textSecondaryColor">@color/grayLight</item>
        <item name="redColor">@color/redLight</item>
        <item name="bgColor">@color/backgroundColorDark</item>
        <item name="iconColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyCustomTheme" parent="MaterialSearchBarLight">
        <item name="mt_searchBarColor">@color/searchBarPrimaryColorDark</item>
        <item name="mt_dividerColor">@color/searchBarDividerColorDark</item>
        <item name="mt_navIconTint">@color/searchBarNavIconTintColorDark</item>
        <item name="mt_searchIconTint">@color/searchBarSearchIconTintColorDark</item>
        <item name="mt_clearIconTint">@color/searchBarClearIconTintColorDark</item>
        <item name="mt_menuIconTint">@color/searchBarMenuIconTintColorDark</item>
        <item name="mt_backIconTint">@color/searchBarBackIconTintColorDark</item>
        <item name="mt_textCursorTint">@color/searchBarCursorColor</item>
        <item name="mt_textColor">@color/searchBarTextColorDark</item>
        <item name="mt_hintColor">@color/searchBarHintColorDark</item>
        <item name="mt_placeholderColor">@color/searchBarPlaceholderColorDark</item>
        <item name="mt_highlightedTextColor">@color/searchBarTextHighlightColorDark</item>
    </style>
</resources>