<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coin_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoinFragment">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.scichart.charting.visuals.SciChartSurface
            android:background="@color/carbon_white"
            android:id="@+id/surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>


    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <carbon.widget.Button
        android:id="@+id/btn_last_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/btn_last_month"
        android:text="Last Week"
        android:elevation="10dp"
        android:background="@color/carbon_green_600"
        android:textSize="18sp"
        android:padding="8dp"
        app:carbon_cornerRadius="10dp"
        android:textColor="@color/carbon_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <carbon.widget.Button
        android:id="@+id/btn_last_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="10dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        app:carbon_cornerRadius="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Last Month"
        android:textSize="18sp"
        android:textColor="@color/carbon_black"
        app:layout_constraintEnd_toStartOf="@+id/btn_last_week"
        app:layout_constraintStart_toStartOf="@+id/frameLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>